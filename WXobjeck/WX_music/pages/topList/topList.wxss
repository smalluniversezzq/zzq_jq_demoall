/* pages/topList/topList.wxss */

.info_box {
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 548rpx;
  overflow: hidden;
  color: #fff;
  background: #fff;
}

.info_box__bd {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 4;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.5);
}

.info_box__bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: scale(1.1) translateZ(0);
  filter: blur(36px);
}

.top_bar {
  display: flex;
  align-items: center;
  height: 48px;
  padding: 0 32rpx 0 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
}

.top_bar__img {
  display: block;
  width: 72rpx;
  margin-right: 6rpx;
  height: 72rpx;
}

.album {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  margin-top: 34rpx;
  padding: 0 32rpx;
  overflow: hidden;
}

.album__media {
  position: relative;
  width: 250rpx;
  margin-right: 40rpx;
  overflow: hidden;
}

.album__media::after {
  content: "";
  display: block;
  padding-top: 100%;
}

.album__cover {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.album__bd {
  position: relative;
  -webkit-box-flex: 1;
}

.album__name {
  display: flex;
  -webkit-line-clamp: 2;
  max-height: 94rpx;
  line-height: 1.3;
  overflow: hidden;
  font-size: 36rpx;
}

.album__desc {
  display: flex;
  -webkit-line-clamp: 2;
  max-height: 72rpx;
  overflow: hidden;
  margin-top: 16rpx;
  font-size: 28rpx;
}

.opt_box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 168rpx;
  padding: 0 32rpx;
  transition: 1s ease-in-out;
}

.btn_play_all {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 340rpx;
  height: 80rpx;
  overflow: hidden;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  border-radius: 20px;
  background: #31c27c;
}

.btn_play_all::before {
  content: "";
  display: block;
  height: 0;
  width: 0;
  margin-right: -6rpx;
  border-color: transparent transparent transparent #fff;
  border-width: 14rpx 22rpx;
  border-style: solid;
  border-radius: 2px;
}

.title {
  background: #fff;
}

.songList {
  display: flex;
  align-items: center;
  background: #fff;
}

.songListIndex {
  height: 133rpx;
  width: 90rpx;
  text-align: center;
  line-height: 133rpx;
}
.song_box{
  flex: 1;
  overflow: hidden;
}
.songname{
    
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.hot {
  color: red;
}

.song_info {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.vip {
  color: #51ddad;
  border: 1px solid #51ddad;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 20rpx;
  margin-right: 10rpx;
}

