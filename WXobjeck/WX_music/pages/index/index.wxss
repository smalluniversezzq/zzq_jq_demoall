
.navbar {
  display: flex;
  background: #fff;
  height: 90rpx;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 90rpx;
  color: #000;
}

.navbar .item.active {
  color: #31c27c;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #31c27c;
}

/*推荐*/

.slide-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.recommend {
  padding: 0 20rpx;
}

.recommend-title {
  padding: 30rpx 0;
}

.recommend-content {
  display: flex;
  justify-content: space-around;
}

.radio-img {
  display: block;
  width: 330rpx;
  height: 330rpx;
  position: relative;
}

.radio-img::after {
  content: '';
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 48rpx;
  height: 48rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
}

.radio-text {
  display: block;
  padding: 15rpx 0 0 0;
  color: #000;
}

/* 排行榜 */

.topList-box {
  margin: 20rpx;
}

.topList-list {
  margin-bottom: 20rpx;
  background: #fff;
  display: flex;
  position: relative;
}

.topList-img {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.topList-info {
  margin: 0 20rpx 0 30rpx;
  flex: 1;
  overflow: hidden;
}

.topList-title {
  font-size: 32rpx;
  color: #000;
  font-weight: normal;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.topList-detail {
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: rgba(0, 0, 0, 0.5);
}

.topList-songname {
  color: #000;
  margin-left: 16rpx;
  margin-right: 10rpx;
}

.topList-arrow {
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -4px;
  width: 6px;
  height: 6px;
  border-right: 1px solid #b2b2b2;
  border-bottom: 1px solid #b2b2b2;
  transform: rotate(-45deg);
}

.topList-imgbox {
  position: relative;
}

.topList-playnum {
  position: absolute;
  z-index: 10;
  left: 10rpx;
  color: #fff;
  opacity: 0.6;
  font-size: 18rpx;
  bottom: 14rpx;
}

.playnum-img {
  display: inline-block;
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/yqq_v5/img/list_sprite.png?max_age=19830212&d=20151105145423');
  background-repeat: no-repeat;
  background-size: 24px 60px;
  width: 20rpx;
  height: 20rpx;
  background-position: 0 -50px;
  margin-right: 6rpx;
}

/* 搜索 */

.search {
  padding: 16rpx 30rpx;
  display: flex;
}

.search-box {
  display: flex;
  background: white;
  align-items: center;
  flex: 1;
  padding: 0 30rpx;
  border-radius: 4px;
}

.search-input {
  flex: 1;
  padding-left: 20rpx;
  height: 60rpx;
}

.cancel {
  width: 100rpx;
  text-align: center;
  color: #31c27c;
  height: 60rpx;
  line-height: 60rpx;
}

.search-page {
  height:  calc(100% - 90rpx);
  background: #fff;
}

.his-box {
  padding: 16rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.clear-history {
  height: 80rpx;
  line-height: 80rpx;
}

.his-word {
  flex: 1;
  padding-left: 30rpx;
}

.hot-search {
  padding: 20rpx 30rpx;
}

.hot-search-title {
  margin-bottom: 30rpx;
}

.hot-search-word {
  display: inline-block;
  font-size: 14px;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
  border: 2rpx solid rgba(0, 0, 0, 0.6);
  border-radius: 28rpx;
  word-break: keep-all;
  margin-bottom: 20rpx;
  margin-right: 28rpx;
}

.hot-search-word.special {
  color: red;
  border: 2rpx solid rgba(231, 31, 31, 0.6);
}

/* 搜索结果 */

.res_list {
  border-bottom: 1px solid #eee;
  display: flex;
  overflow: hidden;
}

.res_info {
  overflow: hidden;
  flex: 1;
}

.res_img_box {
  height: 110rpx;
  width: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.res_img {
  background-image: url('https://y.gtimg.cn/mediastyle/mobile/yqq_v5/img/search_sprite.png?max_age=19830212&d=20151105145423');
  background-repeat: no-repeat;
  background-size: 22px 30px;
  width: 44rpx;
  height: 40rpx;
  background-position: 0 0;
}

.res_songname, .res_singname {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.res_songname{
  font-size: 32rpx;
  color: #000;
      margin: 20rpx 0 4rpx;
      line-height: 36rpx;

}
.res_singname{
  font-size: 24rpx;
}