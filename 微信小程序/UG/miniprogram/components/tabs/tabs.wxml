<!--components/tabs/tabs.wxml-->
<view class="tabs">
  <view class="tabs-title">
    <view 
    class="title-item {{item.isActive?'active':''}}"
    wx:for="{{tabs}}"
    wx:key="id"
    bindtap="handleotemTap"
    data-index="{{index}}"
    >
      {{item.value}}
    </view>
  </view>
  <view class="tabs-content">
    <solt></solt>
  </view>
</view>
