.address{
  margin-top:20rpx;
}
.address-btn{
  font-size: 20rpx;
}
.address-info{
  display: flex;
  padding: 0 20rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 10rpx;
  /* border-bottom: 1rpx solid #e4393c; */
}
.user_info{
  flex: 3;
}
.user-phone{
  flex: 1;
}
.cart-content{
  margin-top: 10rpx;
}
.card-title{
  font-size: 36rpx;
  padding-left: 10rpx;
  font-weight: 600;
  /* border-bottom: 1rpx solid #e4393c; */
  padding-bottom: 10rpx;
}
.card-list{
  padding: 10px;
  display: flex;
  flex: wrap;
  background: #fff;
  border-radius: 10rpx;
  justify-content: start;
  /* align-items: center; */
  /* border-bottom: 1rpx solid #8a8a8a; */
}
.card-checkbox{
  width: 10%;
  margin-right: 10rpx;
}
.cart-ima-wrap{
  /* flex: 2; */
  width: 25%;
  margin-right: 30rpx;
}
.cart-ima-wrap > image{
  width: 100%;
}
.cart-info{
  width: 65%;
}
.card-name{
  word-wrap: break-word;
  width: 470rpx;
  display:-webkit-box;
  overflow:hidden;
  color: #666;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;   
}
.goods-price-wrap{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
.goods-price{
  font-size: 35rpx;
  color: red;
}
.cart-num-tool{
  display: flex;
}
.num-edit{
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #515151;
}
.goods-num-edit{
  margin: 0 20rpx;
}
.footer-tool{
  border-top: 1rpx solid #bfbfbf;
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  height: 90rpx;
  background: #fff;

}
.add-check-wrap{
  padding-top: 10rpx;
  padding-left: 10rpx;
  flex:2;
}
.total-price-box{
  flex: 5;
  text-align: right;
  padding-right: 10rpx;
}
.total-price-text{
  color: red;
}
.order-pay-wrap{
  flex: 2;
  background: red;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.empty-box{
  width: 400rpx;
  margin: 0 auto;
}
.empty-txt{
  text-align: center;
  color:#707070 ;
}
